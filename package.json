{
  "name": "codegen",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Rahul Singh",
    "url": "https://x.com/Leo_5661"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:cli": "turbo --filter=codegen-cli build",
    "dev:cli": "turbo --filter=codegen-cli dev",
    "dev:doc": "turbo --filter=docs dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "pub:beta": "",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.1.2"
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">=18"
  }
}
