{
  "extends": "@codegen/typescript-config/base.json",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tsconfig.json", "package.json", "README.md", "src/templates/**/*"]
}
