{
    "name": "codegen-cli",
    "version": "0.0.1",
    "description": "Node CLI to create base structure with all configurations for fast development",
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "bin": {
        "cgen": "./dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Leo5661/codegen.git",
        "directory": "packages/codegen-cli"
    },
    "keywords": [
        "codegen",
        "cli",
        "template",
        "code generator"
    ],
    "author": {
        "name": "Rahul Singh",
        "url": "https://leocoder.xyz"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Leo5661/codegen/issues"
    },
    "homepage": "https://github.com/Leo5661/codegen#readme",
    "scripts": {
        "link-pkg": "pnpm unlink --global codegen-cli && pnpm link --global",
        "clean": "rimraf dist",
        "typecheck": "tsc --noEmit",
        "dev": "tsup --watch",
        "build": "tsup",
        "lint": "tsc"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "figlet": "^1.7.0",
        "fs-extra": "^11.2.0",
        "inquirer": "^11.0.1",
        "type-fest": "^4.26.1"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/figlet": "^1.5.8",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.11.24",
        "eslint": "^9.10.0",
        "rimraf": "^6.0.1",
        "tsup": "^6.3.0",
        "typescript": "^5.6.2"
    }
}